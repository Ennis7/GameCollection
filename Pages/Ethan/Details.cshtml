@page
@model GameCollection.Pages.Ethan.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<head>
<style>
    body {
        background-image: url('https://c4.wallpaperflare.com/wallpaper/615/476/58/video-game-collage-wallpaper-preview.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
    h3 {
        font-size: 2em;
        color: blue;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        text-align: center;
    }

    h1 {
        font-size: 4em;
        color: blue;
        background-color: black;
        border: 5px solid black;
        text-align: center;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    thead {
        text-align: center;
        background-color:black;
    }
    dd{
        color: darkviolet;
        text-align: center;
        border: 3px solid yellow;
        font-size: 2em;
        background-color: black;

    }
    dl{
        color: darkviolet;
        text-align: center;
        border: 3px solid yellow;
        font-size: 1em;
        background-color:black;
    }

    dt {
        color: white;
        font-size: 2em;
        border: 3px solid yellow;
        background-color:black;
    }

    form {
        text-align: center;
        background-color: black;
    }

    p {
        color: green;
        font-size: 1.5em;
    }

    h2 {
        font-size: 1.5em;
        color: darkviolet;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
    body{
        background-color:black;
    }
    .bruh{
        color: white;
        text-align: center;
        font-size: 2em;
        background-color: black;
        border-radius:50%;
    }

</style>
</head>
<body>
<h1>Details</h1>

<div>
    <h4>Games</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games.GenreType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.GenreType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games.Developer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.Developer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.OwnerID)
        </dd>
    </dl>
</div>
<div class="bruh">
    <a asp-page="./Edit" asp-route-id="@Model.Games?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
